<!DOCTYPE html>
<html>
<head>
	<% include ../../head %>
	<title>FeedMe | Dashboard</title>

	<!-- Custom CSS Stylesheet -->

</head>
<body>
	<% include ../partials/navbar-tea %>

	 <div id="page-wrapper">


	 
		 <div class="row">
		    <div class="col-lg-12">
		        <h1 class="page-header"><%= course.name %></h1>
		    </div>  
		</div>
		<div class="row">
			<div class="col-lg-12">
				<div class="panel panel-default">
					<div class="panel-heading clearfix"><label for="titulo"><%= activity.name %></label>
                	</div>

                	<div class="panel-body clearfix">
	                	<div class="pull-right alumnos-informe">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <strong>Alumnos</strong>
                                </div>
                                <div class="panel-body">
                                    <div class="list-group">
                                        <a href="#" class="list-group-item">
                                            <i class="fa fa-users fa-fw"></i>Todos
                                        </a>
                                        <% for (var i = 0; i < students.length; i++){ %>
						                    <% var student = students[i]; %>
						                    <a href="#" id="student <%= i %>" class="list-group-item">
                                            	<i class="fa fa-user fa-fw"></i><%= student.firstName %> <%= student.lastName %>
                                        	</a>
						                    
						                <% } %>
                                        
                                    </div>
                                </div>
                            </div>
                    	</div>


                    	<!-- Informe General -->
                    	<div id="activity-summary" class="pull-left informe">
                                 

                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <strong>Pregunta 1: Esta es una pregunta de alternativas</strong>
                                </div>
                                <!-- /.panel-heading -->
                                <div class="panel-body">
                                    
                                    <div id="legendPlaceholder"></div>
                                    <div class="pregunta" id="pregunta1"></div>
                                </div>
                                <!-- /.panel-body -->
                            </div>
                         
                         
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <strong>Pregunta 2: Esta es una pregunta de si o no</strong>
                                </div>
                                <!-- /.panel-heading -->
                                <div class="panel-body">
                                    
                                    <div id="legendPlaceholder"></div>
                                    <div class="pregunta" id="pregunta2"></div>
                                </div>
                                <!-- /.panel-body -->
                            </div>
                         
                         
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <strong>Pregunta 3: Esta es una pregunta numerica</strong>
                                </div> 
                                <div class="panel-body">
                                    <div>Promedio: <span> 18.3</span></div>
                                    <div>Maximo: <span> 34</span></div>
                                    <div>Minimo: <span> 6</span></div>
                                    <div>Moda: <span> 16</span></div>
                                    <div>Desviacion Estandar: <span> 3.2</span></div>
                                </div>                    
                            </div>
                         
                         
                            <div class="panel panel-default">
                                <div class="panel-heading clearfix">
                                    <strong>Pregunta 4: Esta es una pregunta de respuesta corta</strong>
                                    <a class="pull-right"><i class="fa fa-plus"></i></a>
                                </div>                   
                            </div>
                         
                         
                            <div class="panel panel-default">
                                <div class="panel-heading clearfix">
                                    <strong>Pregunta 5: Esta es una pregunta para comentario</strong>
                                    <a class="pull-right"><i class="fa fa-plus"></i></a>
                                </div>                   
                            </div>
                         
                    	</div>

                    	<!-- Specific Student Answers -->
                    	
		                    <div id="activity-summary" class="pull-left informe">
	                            <div class="panel panel-default">
	                                <div class="panel-heading">
	                                    <strong>Agustin Gomez</strong>
	                                </div>
	                                <!-- /.panel-heading -->
	                                <div class="panel-body">

	                                </div>
	                                <!-- /.panel-body -->
	                            </div>
	                        </div>
		                    
		                
                    	
                	</div> 
				</div>
				
			</div>
		</div>

    </div>

	<% include ../../scripts %>



</body>
</html>
