<!DOCTYPE html>
<html>

<head>
    <% include ../../head %>
        <title>FeedMe | Solicitudes
        </title>

        <!-- Custom CSS Stylesheet -->
        <script src="/js/angular/controllers/requests.js"></script>
        <link rel="stylesheet" type="text/css" href="/stylesheets/requests-tea.css">
</head>

<body ng-app="myApp" ng-controller="requestsTeaCtrl">
    <div ng-if="message" class="alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
            &times;
        </button>

        {{ message }}
    </div>
    <% include ../partials/navbar-tea %>

        <div id="page-wrapper" ng-init="initializeRequests(' <%= JSON.stringify(requests) %>')">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header"> Solicitudes pendientes: </h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <div class="panel-body">
                <div ng-repeat="request in requests">

                    <div class="alert alert-info">
                        <a href="#" class="alert-link pull-left">
                          {{request.student.firstName}} {{request.student.lastName}} quiere tomar su curso {{request.course.name}}
                        </a>

                        <div class="pull-right">
                          <button class="boton-inscribir-curso margin-10"  ng-click="rejectRequest(request)"> Rechazar </button>
                          <button class="boton-inscribir-curso"  ng-click="acceptRequest(request)"> Aceptar </button>

                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>

                <div ng-if="requests.length == 0" class="alert alert-warning alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    No tiene solicitudes pendientes
                </div>
            </div>

        </div>

        <% include ../../scripts %>
</body>

</html>
