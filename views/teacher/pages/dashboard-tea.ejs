<!DOCTYPE html>
<html>
<head>
	<% include ../../head %>
	<title>FeedMe | Dashboard</title>

	<!-- Custom CSS Stylesheet -->
	<link rel="stylesheet" type="text/css" href="/stylesheets/dashboard-tea.css">
</head>
<body>
	<% include ../partials/navbar-tea %>

	<div id="page-wrapper">
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header"><%= user.firstName %> <%= user.lastName %></h1>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-3">
				<div class="panel panel-primary">
					<div class="panel-heading">Imagen</div>
					<div class="panel-body">
						<div class="avatar">
							<img class="avatar-img" src="<%= user.profilePicturePath %>" alt="Profile Picture" onclick="uploadProfilePicture();">
						</div>
					</div>
					<div class="panel-footer">
						<a href="javascript:void(0)" onclick="uploadProfilePicture();">Cambiar Foto</a>
					</div>
					<form name="avatar" enctype="multipart/form-data" action="/teacher/dashboard/edit-profile-picture" method="post" style="display: none;">
						<input id="photo-upload" type="file" name="avatar" accept="image/*" style="display: none;">
					</form>
				</div>
			</div>
			<div class="col-lg-9">
				<div class="panel panel-primary">
					<div class="panel-heading">Informaci&oacute;n B&aacute;sica</div>
					<div class="panel-body">
						<div id="profile">
							<div class="col-lg-6">
								<h4 id="user-name"><%= user.firstName %> <%= user.lastName %></h4>
								<h4 id="user-school"><%= user.school %></h4>
							</div>
							<div class="col-lg-6">
								<h4 id="user-email"><%= user.email %></h4>
							</div>
						</div>
						<div id="edit-profile" style="display: none;">
							<form id="edit-profile-form" role="form" method="post" action="/teacher/dashboard/edit-profile">
								<div class="col-lg-6">
									<div class="form-group">
										<input type="text" class="form-control" value="<%= user.firstName %>" name="firstName" tabindex="1">
									</div>
									<div class="form-group">
										<input type="text" class="form-control" value="<%= user.lastName %>" name="lastName" tabindex="2">
									</div>
									<div class="form-group">
										<input type="text" class="form-control" value="<%= user.school %>" name="school" tabindex="3">
									</div>
								</div>
								<div class="col-lg-6">
									<div class="form-group">
										<input type="text" class="form-control" value="<%= user.email %>" name="email" tabindex="4">
									</div>
								</div>
							</form>
						</div>
					</div>
					<div class="panel-footer">
						<a id="edit-profile-link" href="#">Editar</a>
						<button id="edit-profile-submit-btn" style="display: none;" type="submit" form="edit-profile-form" class="btn btn-success">Guardar</button>
						<button id="edit-profile-cancel-btn" style="display: none;" type="button" class="btn btn-default">Cancelar</button>
					</div>
				</div>
			</div>
		</div> <!-- row -->
	</div> <!-- page wrapper -->

	<% include ../../scripts %>
	<script type="text/javascript">
		$(document).ready(function (){
			// edit profile button clicked
			$('#edit-profile-link').on('click', function (event){
				$('#profile').hide();
				$('#edit-profile-link').hide();
				$('#edit-profile').show();
				$('#edit-profile-submit-btn').show();
				$('#edit-profile-cancel-btn').show();
			});

			// edit profile cancel button clicked
			$('#edit-profile-cancel-btn').on('click', function (event){
				$('#profile').show();
				$('#edit-profile-link').show();
				$('#edit-profile').hide();
				$('#edit-profile-submit-btn').hide();
				$('#edit-profile-cancel-btn').hide();
			});
		});
	</script>
	<script type="text/javascript" src="/js/upload.js"></script>
</body>
</html>