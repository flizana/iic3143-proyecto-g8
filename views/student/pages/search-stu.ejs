<!DOCTYPE html>
<html>

<head>
    <% include ../../head %>
        <title>FeedMe | Dashboard</title>

        <!-- Custom CSS Stylesheet -->
        <link rel="stylesheet" type="text/css" href="/stylesheets/search-stu.css">
        <!-- scripts for angular controllers -->
        <script src="/js/angular/controllers/searchResult.js"></script>

</head>

<body ng-app="myApp">
    <% include ../partials/navbar-stu %>

        <div id="page-wrapper" ng-controller="searchResultCtrl">
            <div class="row" ng-init="initialize('<%= JSON.stringify(courses) %>')">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Resultados de busqueda: <%= searchFor %></h1>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <div class="row" ng-if="courses.length === 0">
                    <div class="col-lg-12">
                        <p> No se encontraron cursos para la busqueda
                            <%= searchFor %>
                        </p>
                    </div>
                </div>
                <!-- /.row -->
                <div class="row" ng-repeat="course in courses">
                    <div class="col-lg-9">
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                {{course.name}}
                                <button class="boton-inscribir-curso" ng-if="!isSignedUp('<%= JSON.stringify(user) %>', course)"> Inscribirse</button>
                                <div class="pull-right boton-inscribir-curso inscrito" ng-if="isSignedUp('<%= JSON.stringify(user) %>', course)">
                                    <i class="fa fa-check"> </i> Inscrito
                                </div>
                                <div class="pull-right boton-inscribir-curso esperando" ng-if"isPendingRequest('<%= JSON.stringify(user) %>', course)">
                                    <i class="fa fa-history"> </i> Solicitado
                                </div>
                            </div>
                            <div class="panel-body">
                                <div class="col-lg-6">
                                    <h4> Profesor: </h3>
                                    <h4>{{course.teacher.school}}</h4>
                                </div>
                                <div class="col-lg-6">
                                    <h4>{{course.teacher.firstName}} {{course.teacher.lastName}}</h4>
                                </div>
                            </div>
                            <div class="panel-footer">

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <% include ../../scripts %>
</body>

</html>
