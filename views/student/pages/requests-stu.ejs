<!DOCTYPE html>
<html>

<head>
    <% include ../../head %>
        <title>FeedMe | Solicitudes
        </title>

        <!-- Custom CSS Stylesheet -->
        <script src="/js/angular/controllers/requests.js"></script>
</head>

<body ng-app="myApp" ng-controller="requestsTeaCtrl">

    <% include ../partials/navbar-stu %>

        <div id="page-wrapper" ng-init="initializeRequests(' <%= JSON.stringify(requests) %>')">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header"> Tiene {{requests.length}} Solicitudes: </h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <div class="panel-body">
                <div ng-repeat="request in requests">

                  <div ng-if= "request.accepted" class="alert alert-success">
                      <a href="#" class="alert-link pull-left">
                        Solicitud para ingresar al curso {{request.course.name}}
                      </a>

                      <div class="pull-right">
                        estado: ACEPTADA
                      </div>
                      <div class="clearfix"></div>
                  </div>
                  <div ng-if= "!request.accepted && request.answered" class="alert alert-danger">
                      <a href="#" class="alert-link pull-left">
                        Solicitud para ingresar al curso {{request.course.name}}
                      </a>

                      <div class="pull-right">
                        estado: RECHAZADA
                      </div>
                      <div class="clearfix"></div>
                  </div>
                  <div ng-if= "!request.answered" class="alert alert-warning">
                      <a href="#" class="alert-link pull-left">
                        Solicitud para ingresar al curso {{request.course.name}}
                      </a>

                      <div class="pull-right">
                        estado: PENDIENTE
                      </div>
                      <div class="clearfix"></div>
                  </div>
                </div>

                <div ng-if="requests.length == 0" class="alert alert-warning alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    No tiene solicitudes
                </div>
            </div>

        </div>

        <% include ../../scripts %>
</body>

</html>
